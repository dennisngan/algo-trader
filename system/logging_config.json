{
  "version": 1,
  "disable_existing_loggers": false,
  "formatters": {
    "simple": {
      "format": "%(asctime)s - %(name)s - %(filename)s - %(levelname)s - %(message)s"
    },
    "detailed": {
      "format": "%(asctime)s.%(msecs)03d - %(name)s - %(filename)s - %(lineno)s - %(funcName)s - %(levelname)-8s - %(message)s",
      "datefmt": "%Y-%m-%d %H:%M:%S"
    }
  },
  "handlers": {
    "stdout": {
      "class": "rich.logging.RichHandler",
      "level": "DEBUG",
      "rich_tracebacks": true,
      "show_path": false
    },
    "info_file_handler": {
      "class": "logging.handlers.TimedRotatingFileHandler",
      "level": "INFO",
      "formatter": "simple",
      "filename": "log/info.log",
      "when": "D",
      "interval": 1,
      "backupCount": 40,
      "encoding": "utf8"
    },
    "error_file_handler": {
      "class": "logging.handlers.TimedRotatingFileHandler",
      "level": "ERROR",
      "formatter": "detailed",
      "filename": "log/errors.log",
      "when": "D",
      "interval": 1,
      "backupCount": 40,
      "encoding": "utf8"
    },
    "queue_handler": {
      "class": "logging.handlers.QueueHandler",
      "handlers": [
        "stdout",
        "info_file_handler",
        "error_file_handler"
      ],
      "respect_handler_level": true
    }
  },
  "root": {
    "level": "DEBUG",
    "handlers": [
      "queue_handler"
    ]
  }
}
